<UserControl x:Class="ZuneModdingHelper.Pages.AboutPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZuneModdingHelper.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel HorizontalAlignment="Left">
        <Border Padding="8">
            <Button Content="About ZMH" Style="{StaticResource ActionButtonStyle}"
                    VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

        <Border Padding="8" Background="Black">
            <Button Content="Buy" Style="{StaticResource ActionButtonPinkStyle}"
                VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
    </StackPanel>
</UserControl>
